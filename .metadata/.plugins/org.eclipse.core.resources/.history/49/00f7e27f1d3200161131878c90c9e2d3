package QueueOfStrings;

public class ResizingArrayQueueOfStrings extends QueueOfStrings {
	private String[] q = new String[1];
	private int tail = 0;
	private int head = 0;
	
	@Override
	public void enqueue(String item) {
		
		if(tail <= q.length-1)
			resize(2*q.length);
		
		q[tail] = item;

	}

	@Override
	public String dequeue() {
		String item = q[head];
		q[head] = null;
		
		if(head == q.length/4)
			resize(q.length/2);
		return item;
	}

	@Override
	public boolean isEmpty() {
		return q[head] == null;
	}
	
	private void resize(int capacity){
		String[] copy = new String[capacity];
		
		for(int i=tail; i<head; i++){
			copy[i] = q[i];
		}
		head = (copy.length - 1)%2;
		tail = (copy.length - 1)%4;
		q = copy;
	}
	
	public int size(){
		return tail-head;
	}

}
